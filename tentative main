from board import Board
from cell import Cell
from menu import *
import pygame, sys
from constants import *
from sudokugenerator import SudokuGenerator


def main():

    pygame.init()
    screen = pygame.display.set_mode((600, 600))
    screen.fill(BG_COLOR)
    board_object = Board(screen, 600, 600)
    board_object.draw()

    while True:

        board_object = Board(600, 600, screen, difficulty=30)
        if board_object.difficulty == 30:
            removed_cell = 30
        elif board_object.difficulty == 40:
            removed_cell = 40
        elif board_object.difficulty == 50:
            removed_cell = 50

        boardlist = SudokuGenerator(9, removed_cell)
        boardlist.fill_box(0, 0)
        boardlist.fill_remaining(3, 0)
        boardlist.remove_cells()

        print(boardlist.board)

        for i in range(9):
            for j in range(9):
                board_object.sketch(boardlist.board[i][j])

        pygame.display.update()

        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                sys.exit()
            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_RETURN:
                    board_object.place_number(4)
                if event.key == pygame.K_s:
                    board_object.sketch(5)
            if event.type == pygame.MOUSEBUTTONDOWN:
                (x, y) = event.pos
                board_object.click(x, y)
    # board_object.sketch(8)


main()
